<div class="row">
  {{#each metrics}}
    <div class="col-md-2">
      <div class="metric-header">
        {{description}}
      </div>
      <div class="request-total">
        {{#if value}}
          {{value}}
        {{else}}
          0
        {{/if}}
      </div>
    </div>
  {{/each}}
</div>
