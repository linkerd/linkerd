{
  "env": {
    "browser": true,
    "jasmine": true,
    "jquery": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jasmine/recommended",
    "plugin:requirejs/recommended"
  ],
  "globals": {
    "_": true,
    "Handlebars": true
  },
  "plugins": [
    "eslint-plugin-requirejs",
    "jasmine"
  ],
  "rules": {
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }]
  },
  "parserOptions": {
    "ecmaVersion": 6
  }
}
